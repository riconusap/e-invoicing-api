# Production Environment Configuration for Digital Ocean
# Copy this file to .env on your Digital Ocean droplet

APP_NAME="E-Invoice API"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://167.172.6.96

# Generate a new key with: php artisan key:generate
APP_KEY=base64:YOUR_GENERATED_APP_KEY_HERE

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=einvoicedb
DB_USERNAME=root
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# Cache Configuration
CACHE_DRIVER=redis
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE
REDIS_PORT=6379

# Mail Configuration (if needed)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration (if using tymon/jwt-auth)
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_TTL=60

# Production optimizations
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# Security
SANCTUM_STATEFUL_DOMAINS=YOUR_DOMAIN_HERE
SESSION_DOMAIN=YOUR_DOMAIN_HERE

# Optional: Analytics and monitoring
ANALYTICS_TRACKING_ID=
SENTRY_LARAVEL_DSN=

# File storage (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
